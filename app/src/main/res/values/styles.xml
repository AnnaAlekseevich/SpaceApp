<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style  name="TitleText">
        <item name="android:textColor">@color/silver_sand</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
